# ----------------------------
# Example .env file for Project Configuration
# ----------------------------

# PostgreSQL Database Configuration
# Replace these placeholders with your actual PostgreSQL credentials.
DATABASE_URL="postgresql://<db-username>:<db-password>@<db-host>:<db-port>/<db-name>"

# Frontend Website URL (Publicly accessible site URL)
NEXT_PUBLIC_FRONTEND_URL="https://next-blog-design-two.vercel.app" # Live frontend website URL

# JWT Token Secrets (Use strong, unique secrets for access and refresh tokens)
NEXT_PUBLIC_ACCESS_TOKEN_SECRET="<your-access-token-secret>"
ACCESS_TOKEN_SECRET="<your-access-token-secret>"   # Used for server-side token validation
REFRESH_TOKEN_SECRET="<your-refresh-token-secret>" # Used for generating refresh tokens

# Pagination Settings for Blog Listings
# Defines how many blogs should be displayed some pages.
NEXT_PUBLIC_BLOGS_PER_PAGE=3
BLOGS_PER_PAGE=3

# Email Settings for Sending Emails
# Used for sending confirmation emails, reset passwords, etc.
EMAIL_HOST=smtp.gmail.com       # Your email provider SMTP server
EMAIL_PORT=587                  # The SMTP server port
EMAIL_USER=your-email@example.com  # Your email address
EMAIL_PASS=your-email-app-password  # Your email app password or generated password

# ----------------------------
# Cloudinary Configuration
# ----------------------------
# Replace with your Cloudinary account details to enable image uploads.
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="<your-cloudinary-cloud-name>"
NEXT_PUBLIC_CLOUDINARY_API_KEY="<your-cloudinary-api-key>"
NEXT_PUBLIC_CLOUDINARY_API_SECRET="<your-cloudinary-api-secret>"
